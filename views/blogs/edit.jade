extends ../_layout.jade

block title
  title Edit Blog

block content
  .container
    .row
      .column.column-50.column-offset-25
      
        h2 Edit Blog
        - if (messages.info)
          blockquote
            p
              em #{messages.info}

        form(method="post", action="/blogs/#{blog._id}")
          fieldset
            label(for='name') Name:
            input(type="text", name="name" value="#{blog.name}")

            label(for='title') Title:
            input(type="text", name="title" value="#{blog.title}")

            label(for='description') Description:
            input(type="text", name="description" value="#{blog.description}")

            .float-left
              input(type="submit", value="update", class="button-primary")
            .float-right
              a.button.button-outline(href="/blogs") Back