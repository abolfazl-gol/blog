extends ../_layout.jade

block title
  title= blog.title

block content
  .container
    h1.center= blog.title
    h3.center= blog.description

    for post in blog.posts
      .post
        h4= post.title
        p.post-body= post.body.substr(0, 300) + "..."

        a.button.primary-button.fa.fa-ellipsis-h(href="/#{blog.name}/post/#{post.slug}")

        .float-right
          p= blog.owner.name